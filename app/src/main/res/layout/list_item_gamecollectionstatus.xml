<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onWishlistedButtonClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="onOwnedButtonClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="item"
            type="com.trigonated.gamecollection.model.objects.GameCollectionStatus" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/platform_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="@{item.platform.name}"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/wishlisted_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Platform ABC" />

        <com.trigonated.gamecollection.ui.gamecollectionstatus.CollectionStatusImageButton
            android:id="@+id/wishlisted_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:onClick="@{onWishlistedButtonClickListener}"
            app:checked="@{item.wishlisted}"
            android:src="@drawable/ic_status_wishlisted"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/owned_button"
            app:layout_constraintTop_toTopOf="parent" />

        <com.trigonated.gamecollection.ui.gamecollectionstatus.CollectionStatusImageButton
            android:id="@+id/owned_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:onClick="@{onOwnedButtonClickListener}"
            app:checked="@{item.owned}"
            android:src="@drawable/ic_status_owned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>